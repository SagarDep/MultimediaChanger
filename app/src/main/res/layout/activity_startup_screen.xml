<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/common_signin_btn_light_text_disabled"
    tools:context="com.developer.alienapps.multimediachanger.StartupScreen">

    <EditText
        android:id="@+id/vpath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:hint="Browse Video"
        android:maxLines="1"
        android:editable="false"/>

    <Button
        android:id="@+id/vbrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Browse" />

    <Button
        android:id="@+id/trim_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vbrowse"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="Trim Video" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginTop="8dp"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/trim_video"
        android:id="@+id/plussign"/>

    <EditText
        android:id="@+id/apath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/plussign"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:editable="false"
        android:hint="Browse Audio" />

    <Button
        android:id="@+id/abrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/plussign"
        android:layout_marginTop="8dp"
        android:text="Browse" />

    <Button
        android:id="@+id/trim_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/abrowse"
        android:layout_centerInParent="true"
        android:text="Trim Audio" />

    <Button
        android:id="@+id/slow_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/abrowse"
        android:layout_alignParentRight="true"
        android:text="Slow Audio" />

    <Button
        android:id="@+id/fast_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/abrowse"
        android:layout_alignParentLeft="true"
        android:text="Speed Audio" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_marginTop="8dp"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/trim_audio"
        android:id="@+id/equalsign"/>

    <Button
        android:id="@+id/run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equalsign"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:text="Run Merge" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputFolder"
        android:text="Open Output Folder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back to Part B"
        android:id="@+id/backB"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
